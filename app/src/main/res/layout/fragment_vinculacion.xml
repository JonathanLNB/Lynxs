<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99454545"
    tools:context=".Fragmentos.Vinculacion">

    <android.support.v7.widget.CardView
        android:id="@+id/cAcceso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/colorPrimary"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/vAgregar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:text="@string/elige"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="30dp" />



            <TextView
                android:id="@+id/vInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/selecciona"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="15dp" />

            <android.support.v7.widget.CardView
                android:id="@+id/cTipoAcceso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="8dp"
                app:cardElevation="6dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">
                <ListView
                    android:id="@+id/lDispositivos"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"/>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>